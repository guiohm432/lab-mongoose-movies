<h2>Edit a Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
    <div>
        <label for="title">Title</label>
        <input id="title" type="text" name="title" value="{{movie.title}}">
    </div>
    <div>
        <label for="genre">Genre</label>
        <input id="genre" type="text" name="genre" value="{{movie.genre}}">
    </div>
    <div>
        <label for="plot">Plot</label>
        <input id="plot" type="text" name="plot" value="{{movie.plot}}">
    </div>
    <button>Submit</button>
</form>